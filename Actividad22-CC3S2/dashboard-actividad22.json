{
  "title": "Dashboard Actividad 22 - demo-app",
  "uid": "actividad22-demo",
  "tags": ["observability", "demo-app"],
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Error Count per Minute",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"demo-app\"} |= \"ERROR\" [1m])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "OTEL Collector Status",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "up{job=\"otel-collector\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ]
        }
      }
    },
    {
      "id": 3,
      "title": "Errors (Last 5 min)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"demo-app\"} |= \"ERROR\" [5m])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Info Logs (Last 5 min)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"demo-app\"} |= \"INFO\" [5m])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Warnings (Last 5 min)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"demo-app\"} |= \"WARNING\" [5m])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "Application Logs",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 12 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{job=\"demo-app\"}",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 38
}
